[ "${TRACE}" = "YES" -o "${MULLE_TEST_TRACE}" = "YES" ] && set -x && : "$0" "$@"


MULLE_TEST_VERSION="3.0.13"

# version is in mulle-test-env


usage()
{
   cat <<EOF >&2
Usage:
   ${MULLE_EXECUTABLE_NAME} [flags] <command> <options> -- <build> -- <run>

   Run tests. Commands take options. Some commands take additional build and
   run options. Notice the -- separator.

   Prepare your test environment with \'mulle-sde craft\'.


Flags:
EOF

   (
      options_technical_flags_usage "             : "
      cat <<EOF
   --dir-name <name> : specify test directory name (default: test)
EOF
   ) | sort >&2


   cat <<EOF >&2

Commands:
   clean                    : remove folders: bin,build,include,lib,libexec,
                                             share,Frameworks
   run                      : run tests
   test-dir                 : locate test folder

Environment:
   MULLE_TEST_CONFIGURATION : configuration to compile files (Debug)
   MULLE_TEST_DIR           : tests direcetory (test)
   PROJECT_LANGUAGE         : language of the tests (c)
   PROJECT_DIALECT          : dialect of the tests, can be objc
   PROJECT_EXTENSIONS       : file extensions of the test files

EOF

   exit 1
}


cd_test_dir()
{
   log_entry "cd_test_dir" "$@"

   local testdir

   # shellcheck source=src/mulle-test-locate.sh
   . "${MULLE_TEST_LIBEXEC_DIR}/mulle-test-locate.sh"

   local RVAL

   MULLE_TEST_DIR="${MULLE_TEST_DIR:-test}"

   if ! r_locate_test_dir "${MULLE_TEST_DIR}"
   then
      fail "Did not find a \"${MULLE_TEST_DIR}\" directory (${MULLE_USER_PWD})"
   fi

   exekutor cd "${RVAL}" || return 1

   if [ -z "${MULLE_VIRTUAL_ROOT}" ] && [ -e .mulle-sde-required ]
   then
      fail "Tests must be run inside mulle-sde. Use \`mulle-sde run mulle-test ...'\`"
   fi
}


#
# grab arguments < args> -- <args> -- <ignore>
#
stage_build()
{
   log_entry "stage_build" "$@"

   local flags="$1"; shift
   local options="$1"; shift

   local args
   local match
   local cmdline

   match="NO"

   while [ $# -ne 0 ]
   do
      if [ "$1" = "--" ]
      then
         shift
         if [ "${match}" = "YES" ]
         then
            break
         fi
         match="YES"
         continue
      fi

      if [ -z "${args}" ]
      then
         args="'$1'"
      else
         args="${args} '$1'"
      fi
      shift
   done

   if [ -x "build-test" ]
   then
      cmdline="exekutor ./build-test"
   else
      # shellcheck source=src/mulle-test-build.sh
      . "${MULLE_TEST_LIBEXEC_DIR}/mulle-test-build.sh"

      cmdline="build_main"
   fi

   eval "${cmdline}" "'${flags}'" "'${options}'" "${args}" || exit 1
}


#
# grab arguments < args> -- <ignore> -- <args>
#
stage_run()
{
   log_entry "stage_run" "$@"

   local flags="$1"; shift
   local options="$1"; shift

   local args
   local match

   match="NO"

   while [ $# -ne 0 ]
   do
      if [ "$1" = "--" ]
      then
         shift
         case "${match}" in
            "NO")
               match="YES"
               continue
            ;;

            "YES")
               match="FINAL"
               continue
            ;;

            "FINAL")
               break
            ;;
         esac

         match="YES"
         continue
      fi

      if [ "${match}" != "YES" ]
      then
         if [ -z "${args}" ]
         then
            args="'$1'"
         else
            args="${args} '$1'"
         fi
      fi
      shift
   done

   if [ -x "run-test" ]
   then
      cmdline="exekutor ./run-test"
   else
      # shellcheck source=src/mulle-test-run.sh
      . "${MULLE_TEST_LIBEXEC_DIR}/mulle-test-run.sh"

      cmdline="run_main"
   fi

   eval "${cmdline}" "'${flags}'" "'${options}'" "${args}" || exit 1
}


main()
{
   local MULLE_FLAG_MAGNUM_FORCE="NONE"
   local MULLE_FLAG_IGNORE_GRAVEYARD="NO"

   # technical flags
   local MULLE_FLAG_EXEKUTOR_DRY_RUN="NO"
   local MULLE_FLAG_LOG_LOCAL="NO"
   local MULLE_FLAG_LOG_DEBUG="NO"
   local MULLE_FLAG_LOG_EXEKUTOR="NO"
   local MULLE_FLAG_LOG_FLUFF="NO"
   local MULLE_FLAG_LOG_SCRIPTS="NO"
   local MULLE_FLAG_LOG_SETTINGS="NO"
   local MULLE_FLAG_LOG_VERBOSE="NO"
   local MULLE_FLAG_LOG_MERGE="NO"
   local MULLE_TRACE_POSTPONE="NO"

   local MULLE_FLAG_DEFER="DEFAULT"
   local FLAG_OUTSIDE_ENV="NO"

   local BUILD_FLAGS="-f"
   local BUILD_OPTIONS="--clean"
   local RUN_FLAGS
   local RUN_OPTIONS
   local RVAL

   # simple option handling
   #
   while [ $# -ne 0 ]
   do
      if options_technical_flags "$1"
      then
         shift
         continue
      fi

      case "$1" in
         -h|--help|help)
            usage "${MULLE_TRACE}"
         ;;

         -f|--force)
            MULLE_FLAG_MAGNUM_FORCE="BOTH"
         ;;

         --configuration)
            [ $# -eq 1 ] && fail "Missing argument to \"$1\""
            shift

            MULLE_TEST_CONFIGURATION="$1"
         ;;

         --debug)
            MULLE_TEST_CONFIGURATION='Debug'
         ;;

         --release)
            MULLE_TEST_CONFIGURATION='Release'
         ;;

         # single build option (hackish)
         --no-clean)
            r_concat "${BUILD_OPTIONS}" "'$1'"
            BUILD_OPTIONS="${RVAL}"
            BUILD_FLAGS=
         ;;

         --dir-name)
            [ $# -eq 1 ] && fail "Missing argument to \"$1\""
            shift

            MULLE_TEST_DIR="$1"
         ;;

         --project-language)
            [ $# -eq 1 ] && fail "Missing argument to \"$1\""
            shift

            if [ "$1" != "${PROJECT_LANGUAGE}" ]
            then
               PROJECT_LANGUAGE="$1"
               PROJECT_EXTENSIONS=""
            fi
         ;;

         --project-dialect)
            [ $# -eq 1 ] && fail "Missing argument to \"$1\""
            shift

            if [ "$1" != "${PROJECT_DIALECT}" ]
            then
               PROJECT_DIALECT="$1"
               PROJECT_EXTENSIONS=""
            fi
         ;;

         --)
            break
         ;;

         -*)
            log_error "${MULLE_EXECUTABLE_FAIL_PREFIX}: Unknown option \"$1\""
            usage "${MULLE_TRACE}"
         ;;

         *)
            break
         ;;
      esac

      shift
   done

   options_setup_trace "${MULLE_TRACE}"

   MULLE_TEST_CONFIGURATION=${MULLE_TEST_CONFIGURATION:-Debug}

   local cmd="$1"
   [ $# -eq 0 ] || shift

   case "${cmd:-run}" in
      run)
         cd_test_dir || exit 1

         mulle-sde craft
         stage_run "${RUN_FLAGS}" "${RUN_OPTIONS}" "$@"
      ;;

      test-dir)
         # shellcheck source=src/mulle-test-locate.sh
         . "${MULLE_TEST_LIBEXEC_DIR}/mulle-test-locate.sh"
         r_locate_main "$@"
         echo "${RVAL}"
      ;;

      *)
         log_error "Unknown command \"${cmd}\""
         usage "${MULLE_TRACE}"
      ;;
   esac
}


#
#
#
_init()
{
   #
   # minimal setup exit
   #
   if [ "$1" = "version" ]
   then
      echo "${MULLE_EXECUTABLE_VERSION}"
      exit 0
   fi

   MULLE_BASHFUNCTIONS_LIBEXEC_DIR="`mulle-bashfunctions-env libexec-dir 2> /dev/null`"
   [ -z "${MULLE_BASHFUNCTIONS_LIBEXEC_DIR}" ] && \
      echo "mulle-bashfunctions-env not installed" >&2 && \
      exit 1

   . "${MULLE_BASHFUNCTIONS_LIBEXEC_DIR}/mulle-bashfunctions.sh" || exit 1

   local _libexec_dir

   _get_libexec_dir "$0" "mulle-test" "mulle-test-run.sh"

   MULLE_TEST_LIBEXEC_DIR="${_libexec_dir}"

   #
   # minimal setup exit
   #
   if [ "$#" -eq 1 ]
   then
      case "$1" in
         "libexec-dir")
            echo "${MULLE_TEST_LIBEXEC_DIR}"
            exit 0
         ;;
      esac
   fi

   set -o pipefail
}


# mingw stuff
case "$PATH" in
   '\\'*)
      PATH="${PATH//\\/\/}"
   ;;
esac

_init "$@"
main "$@"
